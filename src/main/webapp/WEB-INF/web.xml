<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath:org/mapml/log4j.xml</param-value>
    </context-param>
    <filter>
      <filter-name>gzip</filter-name>
      <filter-class>net.sf.ehcache.constructs.web.filter.GzipFilter</filter-class>
    </filter>
    <servlet>
      <servlet-name>osm</servlet-name>
      <servlet-class>org.mapml.servlet.MapMLServlet</servlet-class>
      <init-param>
        <param-name>extent</param-name>
        <!-- xmin=-8429174.508490367 &ymin=5683255.481687962 &xmax=-8426117.027358958 &ymax=5685548.592536515 -->
        <!-- OSM scope <param-value>-180,-85.0511287798,180,85.0511287798</param-value> -->
        <param-value>-20037508.34,-20037508.34,20037508.34,20037508.34</param-value>
      </init-param>
      <init-param>
        <param-name>projection</param-name>
        <param-value>OSMTILE</param-value>
      </init-param>
      <init-param>
        <param-name>zoomRange</param-name>
        <param-value>0,18</param-value>
      </init-param>
      <init-param>
        <param-name>tileUrlTemplate</param-name>
        <param-value>http://{s}.tile.osm.org/{z}/{x}/{y}.png</param-value>
      </init-param>
      <init-param>
        <param-name>licenseUrl</param-name>
        <param-value>http://www.openstreetmap.org/copyright</param-value>
      </init-param>
      <init-param>
        <param-name>licenseTitle</param-name>
        <param-value>Â© OpenStreetMap contributors CC BY-SA</param-value>
      </init-param>
      <init-param>
        <param-name>tileServers</param-name>
        <param-value>a,b,c</param-value>
      </init-param>
      <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
      <servlet-name>arctic</servlet-name>
      <servlet-class>org.mapml.servlet.MapMLServlet</servlet-class>
      <init-param>
        <param-name>extent</param-name>
        <param-value>-28567784.109254867,-28567784.109254755,32567784.109255023,32567784.10925506</param-value>
      </init-param>
      <init-param>
        <param-name>projection</param-name>
        <param-value>APSTILE</param-value>
      </init-param>
      <init-param>
        <param-name>zoomRange</param-name>
        <param-value>0,10</param-value>
      </init-param>
      <init-param>
        <param-name>tileUrlTemplate</param-name>
        <param-value>http://server.arcgisonline.com/arcgis/rest/services/Polar/Arctic_Ocean_Base/MapServer/tile/{z}/{y}/{x}?m4h=t</param-value>
      </init-param>
      <init-param>
        <param-name>licenseUrl</param-name>
        <param-value>http://www.esri.com/legal/software-license</param-value>
      </init-param>
      <init-param>
        <param-name>licenseTitle</param-name>
        <param-value>Sources: Esri, GEBCO, NOAA, National Geographic, DeLorme, HERE, Geonames.org, and other contributors</param-value>
      </init-param>
      <load-on-startup>4</load-on-startup>
    </servlet>
  <mime-mapping>
    <extension>ico</extension>
    <mime-type>image/x-icon</mime-type>
  </mime-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.ico</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>osm</servlet-name>
    <url-pattern>/osm/*</url-pattern>    
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>arctic</servlet-name>
    <url-pattern>/arctic/*</url-pattern>    
  </servlet-mapping>
</web-app>
